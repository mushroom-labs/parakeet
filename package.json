{
  "name": "parakeet",
  "version": "0.0.1",
  "scripts": {
    "build:server": "tsc --project ./tsconfig.server.json",
    "build:client:tsc": "tsc --project ./tsconfig.client.json",
    "build:client:bundle": "browserify ./bin/build/main_client.js -o ./bin/client/build/bundle.js",
    "build:client": "npm run-script build:client:tsc && npm run-script build:client:bundle",
    "build": "npm run-script build:server && npm run-script build:client",
    "start": "cd bin/build && node main_server.js",
    "live:client": "nodemon --delay 3 --exec \"tsc --project ./tsconfig.client.json\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mushroom-labs/parakeet.git"
  },
  "author": "Mushroom Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mushroom-labs/parakeet/issues"
  },
  "homepage": "https://github.com/mushroom-labs/parakeet#readme",
  "dependencies": {
    "@types/express": "^4.0.36",
    "@types/node": "^8.0.24",
    "@types/uuid": "^3.4.0",
    "@types/ws": "^3.0.2",
    "browserify": "^14.4.0",
    "express": "^4.15.4",
    "typescript": "^2.5.1",
    "uuid": "^3.1.0",
    "ws": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "ts-node": "^3.3.0"
  }
}
